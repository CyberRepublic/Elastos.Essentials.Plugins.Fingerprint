<?xml version="1.0" encoding="UTF-8"?>
<plugin id="elastos-trinity-plugins-fingerprint" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>Fingerprint</name>

  <js-module src="www/Fingerprint.js" name="Fingerprint">
    <clobbers target="fingerprintManager"/>
  </js-module>

  <!-- ios -->
  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="FingerprintPlugin">
        <param name="ios-package" value="FingerprintPlugin"/>
      </feature>
    </config-file>

    <source-file src="src/ios/FingerprintPlugin.swift"/>
    <source-file src="src/ios/FingerPrintAuthHelper.swift"/>

    <!-- Usage description of Face ID for iOS 11+ -->
    <preference name="FACEID_USAGE_DESCRIPTION" default=" "/>
    <config-file target="*-Info.plist" parent="NSFaceIDUsageDescription">
      <string>Biometric authentication</string>
    </config-file>
  </platform>

  <!-- android -->
  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="FingerprintPlugin">
        <param name="android-package" value="org.elastos.trinity.plugins.fingerprint.FingerprintPlugin"/>
      </feature>
    </config-file>

    <config-file target="AndroidManifest.xml" parent="/*">
	    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
      <uses-permission android:name="android.permission.USE_FINGERPRINT"/>
    </config-file>

    <framework src="src/android/build.gradle" custom="true" type="gradleReference"/>
    <source-file src="src/android/FingerprintPlugin.java" target-dir="src/org/elastos/trinity/plugins/fingerprint"/>
    <source-file src="src/android/FingerPrintAuthHelper.java" target-dir="src/org/elastos/trinity/plugins/fingerprint"/>
    <source-file src="src/android/PluginError.java" target-dir="src/org/elastos/trinity/plugins/fingerprint"/>
  </platform>

  <engines>
    <engine name="cordova-android" version=">=7.0.0" />
  </engines>

</plugin>
